=====================================
================>SED<================
=====================================

sed -n '/lp/p' /etc/passwd
sed '3d' /etc/passwd
sed '$d' /etc/passwd
sed '/lp/d' /etc/passwd
sed  -n 's/lp/mylp/gp' /etc/passwd

=====================================
===============>AWK<================
=====================================

awk '
BEGIN{
	FS=":"
	print "===FULL NAME LIST==="
}
{
	if ($5 != ""){
		print $5	
	}
}
END{
	print "===DONE==="
}
' /etc/passwd
====================================
awk '
	BEGIN{
		FS=":"
	}
	{
		print "[",NR,"]",$1,$5,$6
	}
	END{
	}
' /etc/passwd
====================================
awk '
	BEGIN{
		FS=":"
	}
	{
		if ($3 >500){
			print $1,$3,$5
		}
	}
	END{
	}
' /etc/passwd
====================================
awk '
	BEGIN{
		FS=":"
	}
	{
		if ($3 = 500){
			print $1,$3,$5
		}
	}
	END{
	}
' /etc/passwd
====================================
awk '
	BEGIN{
		FS=":"
	}
	{
		if (NR >= 5 && NR <= 15){
			print $0
		}
	}
	END{
	}
' /etc/passwd
====================================
awk '
	BEGIN{
		FS=":"
	}
	{
		for ($i = 0;
	}
	END{
	}
' /etc/passwd
